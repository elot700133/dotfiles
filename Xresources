
! true transparency
!URxvt.depth: 32
!URxvt.background: rgba:1111/1111/1111/dddd

! native transparency
URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 20
URrxvt*tintColor: #000000
URxvt*blurRadius: 5
! scroll back secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
! scroll back secondary screen with mouse wheel
URxvt.secondaryWheel: 1

URxvt*saveLines: 100000
URxvt*foreground: White
URxvt*background: Black
URxvt*scrollBar_right: true

! tabs
! Key   Description
!Shift+Down      New tab
!Shift+Left      Go to left tab
!Shift+Right     Go to right tab
!Ctrl+Left       Move tab to the left
!Ctrl+Right      Move tab to the right
!Ctrl+d  Close tab 
!URxvt.perl-ext-common: ...,tabbed,...
