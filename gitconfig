[alias]
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
  br = branch
  ci = commit
  co = checkout
  df = diff
  dc = diff --cached
  ign = ls-files -o -i --exclude-standard
  fo = fetch origin --progress --prune
  lg = log --pretty=oneline -n 20 --graph --abbrev-commit
  last = log -1 HEAD
  list-changed-files = diff-tree --no-commit-id --name-only -r #<sha id>
  lol = log --graph --date-order -C -M --pretty=format:\"%C(auto)<%h> %Creset%C(auto)%ar %Creset%C(auto)[%an] %C(auto)%d%Creset %s\" --date=relative --color
  #log all
  loa = log --graph --date-order -C -M --pretty=format:\"%C(auto)<%h> %Creset%C(auto)%ar %Creset%C(auto)[%an] %C(auto)%d%Creset %s\" --all --date=relative --color
  logall = log --pretty=format:\"%an %ae %ad %ar %cn %ce %cd %cr %s\"
  # shows commit counts
  pulse = shortlog -s --
  rf = checkout --  # revert a file
  goto = reset --hard # go to a certian commit
  # unstage all when no argument is supplied
  unstage = reset HEAD --
  st = status -s
  # submodule
  sm = submodule
[push]
  default = matching
[color]
  diff = auto
  status = auto
 branch = auto
 ui = auto
[merge]
  tool = gvimdiff
[mergetool]
  keepBackup = false
[difftool "default-difftool"]
  prompt = false
  cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE '+syntax off'
[diff]
  tool = default-difftool
[core]
  autocrlf = input
